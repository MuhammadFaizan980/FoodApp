<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLight"
    android:orientation="vertical"
    android:padding="48dp"
    tools:context=".trader.trader_login.ActivityTraderLogin">

    <LinearLayout
        android:id="@+id/linear_i_am_customer"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/i_am_a_customer"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="135dp"
            android:layout_height="2dp"
            android:background="@color/colorAccent" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="@string/log_in"
        android:textColor="@color/colorBlack"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/email_address"
        android:textColor="@color/colorBlack"
        android:textSize="13sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_trader_email"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/password"
        android:textColor="@color/colorBlack"
        android:textSize="13sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_trader_password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:inputType="textPassword"
        android:paddingLeft="16dp" />

    <LinearLayout
        android:id="@+id/linear_customer_forgot_password"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/i_forgot_my_password"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="145dp"
            android:layout_height="2dp"
            android:background="@color/colorAccent" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_trader_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_background"
        android:text="@string/log_in"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:id="@+id/linear_trader_no_account"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/i_don_t_have_an_account"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="145dp"
            android:layout_height="2dp"
            android:background="@color/colorAccent" />


    </LinearLayout>

</LinearLayout>