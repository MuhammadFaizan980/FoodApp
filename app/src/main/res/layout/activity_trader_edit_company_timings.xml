<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trader.activity_trader_edit_company_timings.ActivityTraderEditCompanyTimings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingTop="32dp"
        android:paddingRight="32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/company_details"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/tell_us_about_your_shop"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:text="@string/working_hours"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:paddingRight="24dp"
                    android:text="@string/start"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:paddingRight="32dp"
                    android:text="@string/close"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/sunday"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <FrameLayout
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="32dp">

                    <EditText
                        android:id="@+id/edt_open_sunday"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:background="@drawable/edit_text_background"
                        android:inputType="time"
                        android:textAlignment="center"
                        android:textSize="13sp" />

                    <View
                        android:id="@+id/open_time_vew"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="@string/dash"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="70dp"
                    android:layout_height="25dp">

                    <EditText
                        android:id="@+id/edt_close_sunday"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:background="@drawable/edit_text_background"
                        android:inputType="time"
                        android:textAlignment="center"
                        android:textSize="13sp" />

                    <View
                        android:id="@+id/close_time_vew"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/monday"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/edt_open_monday"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/edit_text_background"
                    android:inputType="time"
                    android:textAlignment="center"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="@string/dash"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_close_monday"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:background="@drawable/edit_text_background"
                    android:inputType="time"
                    android:textAlignment="center"
                    android:textSize="13sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tuesday"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/edt_open_tuesday"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/edit_text_background"
                    android:inputType="time"
                    android:textAlignment="center"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="@string/dash"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_close_tuesday"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:background="@drawable/edit_text_background"
                    android:inputType="time"
                    android:textAlignment="center"
                    android:textSize="13sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/wednesday"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/edt_open_wednesday"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/edit_text_background"
                    android:inputType="time"
                    android:textAlignment="center"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="@string/dash"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_close_wednesday"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:background="@drawable/edit_text_background"
                    android:inputType="time"
                    android:textAlignment="center"
                    android:textSize="13sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/thursday"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/edt_open_thursday"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/edit_text_background"
                    android:inputType="time"
                    android:textAlignment="center"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="@string/dash"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_close_thursday"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:background="@drawable/edit_text_background"
                    android:inputType="time"
                    android:textAlignment="center"
                    android:textSize="13sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/friday"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/edt_open_friday"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/edit_text_background"
                    android:inputType="time"
                    android:textAlignment="center"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="@string/dash"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_close_friday"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:background="@drawable/edit_text_background"
                    android:inputType="time"
                    android:textAlignment="center"
                    android:textSize="13sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/saturday"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/edt_open_saturday"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/edit_text_background"
                    android:inputType="time"
                    android:textAlignment="center"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="@string/dash"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_close_saturday"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:background="@drawable/edit_text_background"
                    android:inputType="time"
                    android:textAlignment="center"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_trader_edit_company_next"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_go_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/ic_left_arrow_filled" />

</FrameLayout>

