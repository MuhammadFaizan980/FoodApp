<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_chat_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/chat_me_sent_back"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txt_customer_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the message sent by the sender"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/txt_customer_message_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="26/09/2019"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_chat_trader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/chat_me_sent_not_back"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/txt_trader_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the message sent by the sender"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/txt_trader_message_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="26/09/2019"
            android:textSize="10sp" />

    </LinearLayout>

</FrameLayout>